FROM node:6.17.1 AS build

# install git command cli
RUN apk add --no-cache git

WORKDIR /app

# git clone
RUN git clone https://github.com/Oscarhasanputra/bhakti-purna-jual-old.git

# install global cli to running requirement command line
RUN npm install --global rimraf

RUN npm install --global webpack webpack-dev-server typescript@2.1.5

# Install dependencies
RUN npm install

# running compiling files on bhakti purna jual
RUN npm run prebuild:prod && npm run build:prod


# Stage 2: Configure Nginx to serve the app
FROM nginx:alpine

# Remove default Nginx config
# RUN rm /etc/nginx/conf.d/default.conf

# # Copy custom Nginx configuration
# COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy application files
COPY --from=build /app/dist /usr/share/nginx/html

# Expose port 80
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]